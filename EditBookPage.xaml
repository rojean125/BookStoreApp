<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bookStoreApp.EditBookPage"
             Title="EditBookPage">
    <StackLayout Padding="20">
        <Entry x:Name="TitleEntry" Placeholder="Title" />
        <Entry x:Name="AuthorEntry" Placeholder="Author" />
        <Editor x:Name="DescriptionEditor" Placeholder="Description" AutoSize="TextChanges" />
        <Entry x:Name="PriceEntry" Placeholder="Price" Keyboard="Numeric" />
        <Button Text="Save Changes" Clicked="OnSaveChangesClicked" />
    </StackLayout>
</ContentPage>